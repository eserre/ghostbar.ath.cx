article
  .content
    pre
      display inline-block
      overflow auto
      padding 0.33em

    code,pre
      background $code-bg
      font-family 'Inconsolata', monospace

#first-post,#featured-posts
  .container
    padding-top 0.66em
    padding-bottom 0.33em
    background rgb(255,255,255)
    background rgba(255,255,255,0.5)
    border-radius 0.33em
    margin-bottom 1.33em

#first-post
  h1
    font-size 1.66em

#featured-posts
  h1
    font-size 1.33em

article.post
  h1
    font-size 1.66em
